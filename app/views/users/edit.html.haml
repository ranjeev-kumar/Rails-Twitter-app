= form_for @user, html: { multipart: true } do |f|
  .form-group
    - if @user.errors.any?
      #error_explanation
        %h3
          = pluralize(@user.errors.count, "error")
          Prohibited this user form being saved:
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg
  %div
    = f.label :fname, 'First Name'
    %br/
    = f.text_field :fname, autofocus: true, class:'form-control', placeholder:'First Name'
  %div
    = f.label :lname, 'Last Name'
    %br/
    = f.text_field :lname, class:'form-control', placeholder:'Last Name'
  .form-group
    = f.label :dob
    %br/
    = f.text_field :dob, class:'form-control', placeholder: 'dd/mm/yyyy'
  %div
    = f.label :gender
    %br/
    = f.radio_button :gender, 'male'
    Male &nbsp;&nbsp;&nbsp;&nbsp;
    \#{f.radio_button :gender, 'female'}Female
  %div
    = f.label :avatar, 'Add Profile Image'
    \:
    \#{f.file_field :avatar}
  .form-group
    = f.submit :submit, class: 'btn btn-default'