<div class="row">
  
  <div class="col-md-2"> 
  </div>

  <div class="col-md-8">
    <div class="form-group">
      <h2>Sign Up</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

        <div class="form-group">
            <%= f.label :fname, 'First Name' %><br />
            <%= f.text_field :fname, autofocus: true, class:'form-control', placeholder:'First Name' %>
        </div>

        <div class="form-group">
          <%= f.label :lname, 'Last Name' %><br />
          <%= f.text_field :lname, class:'form-control', placeholder:'Last Name' %>
        </div>

        <div class="form-group">
          <%= f.label :dob, 'Date of Birth' %><br />
          <%= f.text_field :dob, class:'form-control datepicker', placeholder: 'Click to add Birthday' %>
        </div>

        <div class="form-group">
          <%= f.label :gender %><br />
          <%= f.radio_button :gender, 'male' %>&nbsp;Male &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <%= f.radio_button :gender, 'female' %>&nbsp;Female
        </div>

        <div class="form-group">
          <%= f.label :email, for:'inputEmail3' %><br />
          <%= f.email_field :email, class:'form-control', id:'inputEmail3', placeholder:'Email' %>
        </div>

        <div class="form-group">
          <%= f.label :password, for:'inputPassword3' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class:'form-control', id:'inputPassword3', placeholder:'Password' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control', placeholder:'Confirm Password' %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign Up", class: 'btn btn-default' %>
        </div>
    <% end %>

    <div class="form-group">
      <%= render "users/shared/links" %>
    </div>
  </div>




  
</div>

